<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:mymemdb</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>
        <property name="hibernate.jpa.compliance.transaction">false</property>
        <property name="hibernate.jpa.compliance.query">false</property>
        <property name="native_exception_handling_51_compliance">true</property>

        <mapping class="de.test.hibernate.MyEntity" />
    </session-factory>
</hibernate-configuration>